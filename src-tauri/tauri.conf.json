{
  "productName": "termLight",
  "version": "0.1.2",
  "identifier": "com.marcledesma.termlight",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "publisher": "Marc Ledesma",
    "copyright": "Copyright (c) 2025 Marc Ledesma",
    "shortDescription": "Serial communication tool",
    "longDescription": "A serial communication tool for sending, receiving, and managing commands via COM ports",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "termLight",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/marcledesma/termLight/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMxNDJEQjhGNTAxMzlCQzkKUldUSm14TlFqOXRDd1NYbytCN2g4NnBwdmI3RzJtUVh2Vk5xSllreE0zeWNLUlhVQmxZOG9ERmoK"
    }
  }
}



